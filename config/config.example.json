{
  "storage": {
    "enable_local_storage": true,
    "enable_s3_storage": true,
    "local_data_directory": "data",
    "keep_local_days": 7,
    "save_json_format": true,
    "save_parquet_format": true
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "financial_trading_db", 
    "username": "postgres",
    "password": "your_database_password_here",
    "schema": "public"
  },
  "s3": {
    "enabled": true,
    "bucket_name": "your-s3-bucket-name-here",
    "region": "us-east-1",
    "access_key_id": "YOUR_AWS_ACCESS_KEY_HERE",
    "secret_access_key": "YOUR_AWS_SECRET_KEY_HERE", 
    "raw_prefix": "raw",
    "processed_prefix": "processed",
    "analytics_prefix": "analytics",
    "enable_compression": true,
    "enable_partitioning": true,
    "storage_class": "STANDARD",
    "transition_to_ia_days": 30,
    "transition_to_glacier_days": 90
  },
  "api": {
    "alpha_vantage_api_key": "YOUR_ALPHA_VANTAGE_API_KEY_HERE",
    "alpha_vantage_base_url": "https://www.alphavantage.co/query",
    "alpha_vantage_timeout": 30,
    "coingecko_base_url": "https://api.coingecko.com/api/v3",
    "coingecko_timeout": 30,
    "yahoo_finance_timeout": 30,
    "requests_per_minute": 5,
    "max_retries": 3,
    "retry_delay": 1
  },
  "processing": {
    "stock_symbols": ["AAPL", "GOOGL", "MSFT", "TSLA", "AMZN", "NVDA", "META", "NFLX", "AMD", "CRM"],
    "crypto_symbols": ["BTC", "ETH", "SOL", "ADA", "DOT", "LINK", "UNI", "AVAX"],
    "collection_interval_seconds": 300,
    "batch_size": 100,
    "enable_technical_analysis": true,
    "sma_periods": [20, 50, 200],
    "ema_periods": [12, 26],
    "enable_data_validation": true,
    "max_price_change_percent": 50.0,
    "enable_portfolio_tracking": true,
    "default_portfolio_name": "tech_growth"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_to_file": true,
    "log_file_path": "logs/pipeline.log",
    "max_file_size_mb": 100,
    "backup_count": 5,
    "log_to_console": true,
    "console_level": "INFO"
  },
  "airflow": {
    "dag_id": "financial_data_pipeline",
    "schedule_interval": "*/5 * * * *",
    "max_active_runs": 1,
    "catchup": false,
    "email_on_failure": true,
    "email_on_retry": false,
    "email_list": ["your_email@example.com"],
    "retries": 2,
    "retry_delay_minutes": 5
  },
  "monitoring": {
    "enable_metrics": true,
    "metrics_port": 8080,
    "max_processing_time_seconds": 600,
    "max_memory_usage_mb": 2048,
    "enable_email_alerts": true,
    "enable_slack_alerts": false,
    "slack_webhook_url": null
  }
}