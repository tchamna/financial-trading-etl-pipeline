{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "S3BucketLevelPermissions",
			"Effect": "Allow",
			"Action": [
				"s3:ListBucket",
				"s3:GetBucketLocation",
				"s3:ListBucketMultipartUploads"
			],
			"Resource": "arn:aws:s3:::financial-trading-data-lake"
		},
		{
			"Sid": "S3ObjectLevelPermissions",
			"Effect": "Allow",
			"Action": [
				"s3:PutObject",
				"s3:GetObject",
				"s3:DeleteObject",
				"s3:ListMultipartUploadParts"
			],
			"Resource": "arn:aws:s3:::financial-trading-data-lake/*"
		},
		{
			"Sid": "S3CreateBucket",
			"Effect": "Allow",
			"Action": "s3:CreateBucket",
			"Resource": "arn:aws:s3:::*"
		}
	]
}
